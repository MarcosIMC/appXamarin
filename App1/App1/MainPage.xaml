<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="CapturaLogo.PNG"/>

            <Entry x:Name="usuario" Placeholder="Usuario" Keyboard="Default"/>
            <Entry x:Name="pass" Placeholder="Contraseña" Keyboard="Default" IsPassword="True"/>

            <Button x:Name="btnIniciarSesion" Text="Iniciar Sesión" VerticalOptions="EndAndExpand"></Button> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>