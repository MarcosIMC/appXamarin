<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.FormPersona">

    <ContentPage.ToolbarItems>

        <ToolbarItem x:Name="save" Order="Primary" Icon="ic_save_white_24dp.png" Priority="0" />

    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand">
        <StackLayout>
            <Label Text="Nombre:" />
            <Entry x:Name="nombre" Placeholder="Su nombre" Keyboard="Default"/>

            <Label Text="Apellidos:" />
                <Entry x:Name="apellidos" Placeholder="Sus apellidos" Keyboard="Default"/>

            <Label Text="DNI:" />
                <Entry x:Name="dni" Placeholder="Su DNI" Keyboard="Default"/>

            <Label Text="Email:" />
                <Entry x:Name="email" Placeholder="Su email" Keyboard="Email"/>

            <Label Text="DNI - Administrador" />
                <Entry x:Name="dniAdmin" IsEnabled="False"/>
            
            
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>