<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.FormPersona">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand">
        <StackLayout>
            <Label Text="Nombre:" />
            <Entry ClassId="nombre" Placeholder="Su nombre" Keyboard="Default"/>

            <Label Text="Apellidos:" />
            <Entry ClassId="nombre" Placeholder="Sus apellidos" Keyboard="Default"/>

            <Label Text="Edad:" />
            <Entry ClassId="nombre" Placeholder="Su edad" Keyboard="Numeric"/>

            <Label Text="Email:" />
            <Entry ClassId="nombre" Placeholder="Su email" Keyboard="Email"/>

            <Label Text="Fecha" />
            <Entry ClassId="nombre" Placeholder="Su fecha de nacimiento" Keyboard="Default"/>
            
            
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>